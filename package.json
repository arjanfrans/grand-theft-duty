{
  "name": "grand-theft-duty",
  "version": "0.0.5",
  "description": "Top down WW2 shooter",
  "dependencies": {
    "debug": "^2.2.0",
    "howler": "^2.0.0-beta5",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "three": "^0.73.0",
    "three-bmfont-text": "^2.0.1"
  },
  "scripts": {
    "server:development": "nodemon --exec babel-node ./src/server/index.js",
    "test": "mocha --compilers js:babel-register",
    "cover": "babel-node ./node_modules/.bin/babel-istanbul --include-all-sources cover --root src _mocha",
    "ci": "npm run clean && npm run lint && npm run build:production && npm run cover",
    "clean": "rm -rf dist",
    "lint": "eslint ./src/*",
    "start": "node ./buildsystem/generateIndex.js && webpack-dev-server --config ./buildsystem/webpack.config.js --colors --devtool source-map",
    "deploy": "./buildsystem/deploy.sh",
    "build:production": "node ./buildsystem/generateIndex.js && webpack --config ./buildsystem/webpack.config.js  --optimize-minimize",
    "build:development": "node ./buildsystem/generateIndex.js && webpack --config ./buildsystem/webpack.config.js "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arjanfrans/grand-theft-duty"
  },
  "keywords": [
    "three.js",
    "game",
    "grand theft duty",
    "top down shooter",
    "call of duty",
    "grand theft auto"
  ],
  "author": "Arjan Frans <arjanfrans.com@gmail.com>",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "audiosprite": "^0.5.0",
    "babel-cli": "^6.3.15",
    "babel-istanbul": "^0.5.9",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "convert-bmfont": "^1.0.2",
    "coveralls": "^2.11.4",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "nunjucks": "^2.2.0",
    "pre-commit": "^1.1.2",
    "spritesheet-js": "git+https://github.com/arjanfrans/spritesheet.js.git",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
